<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentFarmaTips"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controlador.FarmaTips">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/botella_de_agua"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="300dp"
        android:layout_height="187dp"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="260dp"
        android:autoText="false"
        android:justificationMode="inter_word"
        android:text="Los resultados de la última Encuesta Nacional de Salud 2009-2010 (ENS) destacan que el 64% de la población chilena adulta tiene exceso de peso, el 26,9 % sufre de presión arterial elevada, el 38,5% posee un nivel de colesterol alto y el 9,4% tiene diabetes mellitus tipo 2. Adquiri r hábi tos alimentarios saludables desde edades tempranas contribuye a prevenir las enfermedades crónicas y mejorar la calidad de vida."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="288dp"
        android:src="@drawable/manzana"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="228dp"
        android:text="Importancia de la alimentacion saludable"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="68dp"
        android:text="¿Cuánta agua debemos tomar?"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="300dp"
        android:layout_height="68dp"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="96dp"
        android:justificationMode="inter_word"
        android:text="Las necesidades de líquido dependen del peso de la persona y de la etapa de vida de cada uno. La recomendación general diaria para un adulto es de 2 a 2,5 litros (basado en adulto promedio de 70 kilos, 15-20 ml/kg de peso), y en niños es de 1 a 1,5 litros (basado en aportes de 50-60 ml/kg de peso)."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="77dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="524dp"
        android:src="@drawable/corazon_fuerte"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="300dp"
        android:layout_height="157dp"
        android:layout_marginStart="156dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="524dp"
        android:justificationMode="inter_word"
        android:text="Los adultos de 18 a 64 años dediquen como mínimo 150 minutos semanales a la práctica de actividad física aeróbica, de intensidad moderada, o bien 75 minutos de actividad física aeróbica vigorosa cada semana, o bien una combinación equivalente de actividades moderadas y vigorosas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="492dp"
        android:text="Frecuencia del ejercicio segun la OMS"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>